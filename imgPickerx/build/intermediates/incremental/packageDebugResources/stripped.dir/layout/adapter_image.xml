<?xml version="1.0" encoding="utf-8"?>
<com.fy.baselibrary.widget.CheckableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_thumb"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@mipmap/default_image" />

    <CheckBox
        android:id="@+id/cb_check"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:duplicateParentState="true"
        android:button="@null"
        android:background="@drawable/selector_item_checked"
        android:padding="10dp" />

    <TextView
        android:id="@+id/txtVideoFlag"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="0:10 s"
        android:textColor="@color/white"
        android:singleLine="true"
        android:drawableLeft="@mipmap/video_icon"
        android:textSize="@dimen/txt_small_much"
        android:paddingLeft="@dimen/spacing_small"
        android:paddingRight="@dimen/spacing_small"
        android:gravity="right|center_vertical"
        android:layout_alignParentBottom="true"/>

</com.fy.baselibrary.widget.CheckableLayout>